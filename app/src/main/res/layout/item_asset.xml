<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:paddingBottom="16dp"
    android:background="@drawable/bg_asset_2">

    <TextView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="BTC"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="30.040,30$"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/symbol"
        app:layout_constraintTop_toBottomOf="@id/symbol" />

    <TextView
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="+4,17%"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/symbol"
        app:layout_constraintTop_toBottomOf="@id/price" />
    
    <ImageView
        android:id="@+id/icGraph"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/change"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_graph_positive_1"
        android:adjustViewBounds="true"
        android:layout_width="180dp"
        android:layout_height="45dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>